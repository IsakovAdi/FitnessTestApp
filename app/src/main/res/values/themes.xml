<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitnessTestApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bej</item>
        <item name="colorPrimaryVariant">@color/bej</item>
        <item name="colorAccent">@color/grey_green</item>
        <item name="colorOnPrimary">@color/grey_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/grey_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/brown</item>
        <item name="fontFamily">@font/andika</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/bej</item>
        <item name="colorOnSurface">@color/brown</item>
    </style>
</resources>